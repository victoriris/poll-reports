datasource db {
  provider = "sqlite"
  url      = "file:test.db"
}

generator client {
  provider = "prisma-client-js"
}

model Candidate {
  id        String   @id @default(uuid())
  name      String
  votes     Vote[]
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Vote {
  id          String    @id @default(uuid())
  candidateId String
  candidate   Candidate @relation(fields: [candidateId], references: [id])
  updatedAt   DateTime  @updatedAt
  createdAt   DateTime  @default(now())
}
